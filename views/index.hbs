<div class="container d-flex flex-column align-items-center">
  <div class="my-4">
    <p class="h1">Account Login</p>
  </div>
  <form action="/member/login" method="POST">
    <div class="form-group row">
      <!--     <input type="text" class="md-2" id="email" name="email" placeholder="Email">-->
      <input type="text" class="md-2 form-control {{#if loginFail}}is-invalid{{/if}}" id="email" name="email"
        placeholder="Email" aria-describedby="validationEmailFeedback" required>
      <div id="validationEmailFeedback" class="invalid-feedback">
        Invalid email or password.
      </div>
    </div>
    <div class="form-group row">
      <!--     <input type="text" class="md-2" id="password" name="password" placeholder="Password"> -->
      <input type="text" class="md-2 form-control {{#if loginFail}}is-invalid{{/if}}" id="password" name="password"
        placeholder="Password" aria-describedby="validationPasswordFeedback" required>
      <div id="validationPasswordFeedback" class="invalid-feedback">
        Invalid email or password.
      </div>
    </div>
    <div class="form-group row">
      <div class="col text-center">
        <button type="submit" class="btn btn-outline-dark">Sign in</button>
      </div>
    </div>
  </form>
</div>